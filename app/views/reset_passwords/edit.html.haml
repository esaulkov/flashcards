.row
  .col-md-6.col-md-offset-3
    .panel.panel-info
      .panel-heading
        %h3= t :restore_password
      .panel-body
        = simple_form_for @user, as: :reset, url: reset_password_path, method: :patch do |f|
          = f.input :email, disabled: true
          = f.input :password
          = f.input :password_confirmation
          = f.button :submit, t(:save_password)
